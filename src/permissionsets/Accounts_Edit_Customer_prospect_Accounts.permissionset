<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Allows defined users to edit customer &amp; prospect accounts when their profile object setting in set to read only.</description>
    <fieldPermissions>
        <editable>true</editable>
        <field>Account.BillingAddress</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Account.Phone</field>
        <readable>true</readable>
    </fieldPermissions>
    <hasActivationRequired>false</hasActivationRequired>
    <label>Accounts Edit Customer &amp; prospect Accounts</label>
    <recordTypeVisibilities>
        <recordType>PersonAccount.Customer</recordType>
        <visible>true</visible>
    </recordTypeVisibilities>
    <recordTypeVisibilities>
        <recordType>PersonAccount.Prospect</recordType>
        <visible>true</visible>
    </recordTypeVisibilities>
</PermissionSet>
